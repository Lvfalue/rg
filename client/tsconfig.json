{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "types": [
      "react"
    ],
    "baseUrl": "./",
    "paths": {
      "component/*": ["src/component/*"],
      "container/*": ["src/container/*"],
      "mc": ["../node_modules/@material-ui/core"],
      "mc/*": ["../node_modules/@material-ui/core/*"],
      "mi/*": ["../node_modules/@material-ui/icons/*"],
    }
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "../node_modules"
  ]
}
